-var error = message

html
  head
    style.
      body {font-family:arial} p {font-size:15px}
  body
    h3 New User
    form(action='/newUserPost', method='post', enctype='multipart/form-data')
      input(type='textfield', name='username', placeholder='User Name')
      br
      br
      input(type='password', name='password', placeholder='Password')
      br
      br
      input(type='password', name='confirmPassword', placeholder='Confirm Password')
      br
      br
      input(type='submit', value='Submit')
      br
      br
    p(style='color:red;')
      i #{error}